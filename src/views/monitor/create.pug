extends ../layouts/authenticated.pug
block content
    .container
        .row
            .col-md-4
                div.form
                    form(action="/service-watcher/new", method="post")
                        include ../partials/messages                    
                        div.form-group
                            label(for="name") Service Name
                            input#username.form-control.form-control-lg(type="text", name="name" required, value=`${oldValues ? (oldValues.name || '') : ''}`)
                            
                        div.form-group
                            label(for="endpoint") Endpoint
                            input#password.form-control.form-control-lg(type="endpoint", name="endpoint" required, value=`${oldValues ? (oldValues.endpoint || '') : ''}`)

                        button.btn.btn-primary(type="submit") Submit