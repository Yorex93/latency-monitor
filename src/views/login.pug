extends layout.pug

block content
    div.auth
            div.form
                .form-header
                    h3='Latency Monitor App'
                form(action="/login", method="post")
                    h4= 'Login'
                    include partials/messages                    
                    div.form-group
                        label(for="username") Email Address
                        input#username.form-control.form-control-lg(type="text", name="username" required, value=`${oldValues ? (oldValues.username || '') : ''}`)
                        
                    div.form-group
                        label(for="password") Password
                        input#password.form-control.form-control-lg(type="password", name="password" required, value=`${oldValues ? (oldValues.password || '') : ''}`)

                    button.btn.btn-primary(type="submit") Submit   

                    p.register-now
                        a(href="/register") Register    
